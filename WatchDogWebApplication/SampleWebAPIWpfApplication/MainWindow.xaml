<Window x:Class="SampleWebAPIWpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="filepathTextBox" HorizontalAlignment="Left" Height="23" Margin="29,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="393" Grid.Row="1"/>
        <Button x:Name="selectBtn" Content="Select" HorizontalAlignment="Left" Margin="432,16,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="selectBtn_Click"/>
        <Button x:Name="sendBtn" Content="Sernd" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="75" Grid.Row="2" Click="sendBtn_Click"/>
        <Image Height="Auto" Width="Auto" MinWidth="50" MinHeight="50"/>

    </Grid>
</Window>
